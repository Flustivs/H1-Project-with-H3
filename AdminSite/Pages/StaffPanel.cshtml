@page
@model AdminSite.Pages.StaffPanelModel
@{
    ViewData["Title"] = "Staff Panel - SFFP";
}

<div class="header">
    <h1>Staff Panel</h1>
</div>
<hr />

<body class="bg">
    <div class="top-row">
        <div class="priceBox">
            <a class="priceBoxBigtext">Pris oversigt</a>
            <hr class="priceBoxHR" />
            <p class="priceBoxText">
                Dagpas = @Model.Price1() DKK <br />
                Månedpas = @Model.Price2() DKK <br />
                Årpas = @Model.Price3() DKK
            </p>
        </div>

        <div class="assigmentsBox">
            <a class="assigmentsBoxBigtext">Forlystelser</a>
            <hr class="assigmentsBoxHR" />
            <p>
                Den Hurtige RutsjeBane <br />
                Seje Svømmehal <br />
                Klør Fem Gynger <br />
                Flyvende Fritfaldstårn <br />
                Skruet Skræmmehus <br />
                Vandvittig Vandrutsjebane <br />
                Sjov Kæmpe Trampolin <br />
                Fart Minirtusjebane <br />
                Toiletter <br />
                Radikale Radiobiler
            </p>
        </div>
    </div>

    <div class="bottom-row">
        <div class="ticketsBox">
            <a class="ticketsBoxBigtext">Billet oversigt</a>
            <hr class="ticketsBoxHR" />
            <p class="totalTickets">
                Købte billetter i alt: 9999
            </p>
            <p class="lastBoughtTickets">
                Seneste 5 købte billetter <br />
                @foreach (var item in Model.LastPurchase())
                {
                    <p>@item</p>
                }
            </p>
        </div>

        <div class="workersBox">
            <a class="workersBoxBigtext">Oversigt over ansatte</a>
            <hr class="workersBoxHR" />
            <p>
                Sofia Rodriguez <br />
                Luca Bianchi <br />
                Emily Smith <br />
                Raj Patel <br />
                Aisha Khan <br />
                Pablo Fernandez <br />
                Isabella Santos <br />
                Yuki Tanaka <br />
                Elise Dupont <br />
                Ahmed Ali
            </p>
        </div>
    </div>
</body>
